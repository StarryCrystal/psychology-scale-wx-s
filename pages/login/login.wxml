<form bindsubmit='formSubmit'>
  <view class="cu-bar bg-white solid-bottom">
    <view class='action'>
      <text class='cuIcon-title text-green'></text>登录
    </view>
  </view>
  <view class="cu-bar bg-white solid-bottom">
    <view class='text-left padding'>
    <!-- <text>青少年心理危机测评系统 Version 3.20-REL\r\n</text> -->
    <text>若登录失败，请联系老师或管理员</text>
    </view>
  </view>

<view class="cu-form-group">
    <view class='title'>账号</view>
    <input placeholder="输入您的账号" class='radius' name='stuid' bindinput='inputStuId' value='{{stuid}}'></input>
</view>
<view class="cu-form-group">
  <view class='title'>密码</view>
  <input placeholder="输入您的密码，不小于6位" type="password" class='radius' name='password' bindinput='inputPassword' value='{{password}}'></input>
</view>
  <view class="padding flex flex-direction">
    <button class='cu-btn bg-green lg btn' form-type="submit">登录</button>
  </view>
</form>